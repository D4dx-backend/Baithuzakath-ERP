{
  "name": "baithuzkath-api",
  "version": "1.0.0",
  "description": "Baithuzzakath Kerala NGO Management System API",
  "main": "src/app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "seed": "node scripts/seed.js",
    "seed:locations": "node scripts/seed.js locations",
    "seed:users": "node scripts/seed.js users",
    "seed:projects": "node scripts/seed.js projects",
    "seed:schemes": "node scripts/seed.js schemes",
    "seed:clear": "node scripts/seed.js clear",
    "rbac:init": "node src/scripts/initializeRBAC.js",
    "rbac:cleanup": "node -e \"require('./src/services/rbacService').cleanupExpiredAssignments().then(console.log)\""
  },
  "keywords": ["ngo", "zakat", "management", "api", "nodejs"],
  "author": "Baithuzzakath Kerala",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "gridfs-stream": "^1.1.1",
    "axios": "^1.6.2",
    "nodemailer": "^6.9.7",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}